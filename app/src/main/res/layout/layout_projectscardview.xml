<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/projectsCardView"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/Gray100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/leftportion"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/projectImage1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="0dp"
                    app:civ_fill_color="@color/Gray800"
                    app:civ_border_color="@color/Gray100"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="85dp"
                    android:layout_marginEnd="85dp"
                    android:elevation="1dp"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/projectImage2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    app:civ_fill_color="@color/Gray800"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/Gray100"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginEnd="30dp"
                    android:elevation="1dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@color/Black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginStart="120dp"
                    android:text="Press button below to create your first project."
                    android:id="@+id/cvProjectName" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>